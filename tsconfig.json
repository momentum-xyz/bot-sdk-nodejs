{
  "extends": "@tsconfig/node-lts-strictest-esm/tsconfig.json",
  "exclude": ["dist", "node_modules", "example"],
  "compilerOptions": {
    "rootDir": ".",
    "composite": true,
    "declaration": true,
    "declarationDir": "dist",
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "checkJs": false,
    "isolatedModules": true,
    "lib": ["ESNext"],
    "module": "CommonJS",
    "ignoreDeprecations": "5.0"
  },
  "references": [{ "path": "./src" }]
}
